<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@drawable/bg_normal_window</item>-->
        <item name="android:textColorHint">@color/colorTextColorHint</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textViewStyle">@style/text_style</item>
        <item name="android:editTextStyle">@style/edit_style</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <!--DialogFragment style-->
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--DialogFragment 底部弹出style-->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>


    <!--EditText 默认Style-->
    <style name="edit_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">#0000</item>
        <item name="android:hint">@string/ts_null_data</item>
        <item name="android:textColor">#ff22222a</item>
    </style>

    <!--TextView 默认Style-->
    <style name="text_style" parent="Widget.AppCompat.TextView">
        <item name="android:background">#0000</item>
    </style>

    <!--手机号 默认style-->
    <style name="edit_phone" parent="edit_style">
        <item name="android:maxLength">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">@string/ts_digits_number</item>
        <item name="android:inputType">phone</item>
        <item name="android:hint">@string/ts_hint_phone</item>
    </style>

    <!--验证码 默认style-->
    <style name="edit_code" parent="edit_style">
        <item name="android:maxLength">@integer/code_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">@string/ts_digits_number</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/ts_hint_code</item>
    </style>

    <!--密码 默认style-->
    <style name="edit_pwd" parent="edit_style">
        <item name="android:maxLength">@integer/password_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">@string/ts_digits_num_letter</item>
        <item name="android:inputType">textWebPassword</item>
        <item name="android:hint">@string/ts_hint_password</item>
    </style>

</resources>